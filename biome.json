{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "vcs": {
    "enabled": true,
    "useIgnoreFile": true,
    "clientKind": "git",
    "defaultBranch": "dev"
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**/", "!dist", "!uploads", "!tsup.config.ts", "**/*.json"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "recommended": true,
        "noNonNullAssertion": "error",
        "useImportType": {
          "level": "error",
          "fix": "safe",
          "options": {
            "style": "separatedType"
          }
        },
        "useExportType": "error",
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "requireAscii": true,
            "strictCase": true,
            "filenameCases": ["kebab-case"]
          }
        }
      },
      "suspicious": {
        "recommended": true,
        "noConsole": "error",
        "noEmptyInterface": "off"
      },
      "complexity": {
        "recommended": true,
        "noExtraBooleanCast": "off",
        "noStaticOnlyClass": "off"
      },
      "correctness": {
        "recommended": true,
        "noUnusedVariables": "error",
        "noUnusedFunctionParameters": "error",
        "noUnusedImports": "error",
        "noUnusedPrivateClassMembers": "error",
        "noUnusedLabels": "error",
        "noUnreachable": "error",
        "useIsNan": "error"
      }
    }
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "arrowParentheses": "always"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "identifierOrder": "lexicographic",
            "groups": [
              ["reflect-metadata"],
              { "type": true },
              ["@custom-types/**"],
              [":NODE:", ":PACKAGE:"],
              [":ALIAS:"],
              [":PATH:"]
            ]
          }
        }
      }
    }
  }
}
